                <input type="text" id="phone" readonly class="input-style input-disable">
                <label class="">Email</label>
                <input type="eamil" id="email" readonly class="input-style input-disable">
                <br>
                <button id= "edit-btn">Edit</button>
                <button type= "submit" id= "save-btn">Save</button>
            </div>
            <div id="checkbox-field">
                <h2>Notification Setting</h2>
                <input type="checkbox" class="">Receive notifications for booking requests<br>
                <input type="checkbox" class="">Receive notifications for unpaid bookings<br>
            </div>
        </div>
    </div>
</div>
