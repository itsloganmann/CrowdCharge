<div id="contentContainer">
    <div class="row margin-setting">
        <div class="col-12">
            <h1 id="notification-header"><b>Profile</b></h1>
        </div>
    </div>
    <div class="margin-setting content" id="subContent">
        <div id="user-img">
            <img alt="user profile icon" src="../../images/user_Icon.png" class="img-responsive" id="profile-icon" /> <br>
            <button id="img-btn">Upload</button>
        </div>

        <div class="col-12 inner-margin-setting" id="form">
